for(int i = 0; i < n; i++){
      	for(int j = 1; i >= j - n; j++){
		if(i >= -j + n){
			System.out.print(s);
		}else{
			System.out.print("　");
		}
	}
	System.out.println();
}

for(int i = 0; i < n; i++){                  //自分流ピラミッド
        for(int j = 0; j < n + i; j++){
		if(n-i <= j + 1 ){
			System.out.print(s);
		}else{
			System.out.print("　");
		}
	}
	System.out.println();
}
